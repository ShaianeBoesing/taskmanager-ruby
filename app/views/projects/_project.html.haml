- if @projects.empty?
  .alert.alert-warning No projects found
- else
  .table-responsive
    %table.table
      %thead
        %tr
          %th 
            Name
          %th 
            Init
          %th
            End  
          %th{:colspan => 3}
            Actions  
      %tbody
      - @projects.asc.each do |project|
        %tr
          %td 
            = project.name 
          %td 
            = date_br(project.init)
          %td
            = date_br(project.end)
          %td.actions
            = link_to "Edit", edit_project_path(project), method: :get, class: "btn btn-sm btn-primary"
          %td.actions
            = link_to "See Tasks", search_tasks_path(:project_id => project.id), class: "btn btn-sm btn-warning"
          %td.actions
            = button_to "Delete", project, method: :delete,  data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger"

